<div class="form">
  <h1>Salut !</h1>
  <h2>Tes voisins te manquent ?</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: true,
                autofocus: true,
                label: "Addresse email",
                input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                required: true,
                label: "Mot de passe",
                input_html: { autocomplete: "current-password" } %>
      <div class="bottom-form d-flex justify-content-between">
        <%= f.input :remember_me,
                    label: "Se rappeler de moi",
                    as: :boolean if devise_mapping.rememberable? %>
        <span>* Requis</span>
      </div>
    </div>
    <div class="form-actions d-flex align-items-center justify-content-between">
      <%= f.button :submit, "Se connecter", class:"button" %>
      <%= link_to "CrÃ©er un compte", new_user_registration_path, class:"button"  %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
