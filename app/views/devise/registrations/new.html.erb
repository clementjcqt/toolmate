<div class="form">
  <h1>Bienvenue sur ToolMate</h1>
  <h2>Rejoins la communauté des bricoleurs solidaires !</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email,
                required: true,
                label: "Ton adresse email",
                autofocus: true,
                input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                required: true,
                label: "Mot de passe",
                hint: ("Minimum #{@minimum_password_length} caractères" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                required: true,
                label: "Confirmation de ton mot de passe",
                input_html: { autocomplete: "new-password" } %>
    </div>
    <div class="form-actions w-100 d-flex justify-content-between align-items-center">
      <%= f.button :submit, "Rejoindre ToolMate", class:"button" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
